<% include partials/_header %>

<div class="container" style="background-color: #5499c7;">

  <div class="row">
    <!--FORM-->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/asignaturas/add" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="nombre" placeholder="Nombre" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="plan" placeholder="Plan de estudio" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="cuatrimestre" placeholder="Cuatrimestre" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="curso" placeholder="Curso" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="software" placeholder="Software" required>
            </div>
            <div class="form-group">
              <select name="responsable" id="responsable" class="form-control" required>
                
              </select>
              
          </div>
          <div class="form-group">
            <select name="alumnos" id="alumnos" class="form-control" required></select>
        </div>
            
            <button class="btn btn-primary" type="submit">
              Add
            </button>
          </form>
        </div>
      </div>
    </div>

    <!-- LIST -->
    <div class="col-md-7">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Plan de estudios</th>
            <th>Cuatrimestre</th>
            <th>Curso</th>
            <th>Software</th>
            <th>Resposable</th>
            <th>Alumnos</th>
            <th>Operaciones</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < asignaturas.length; i++) { %>
            <tr>
              <td><%= i + 1%></td>
              <td><strong><%= asignaturas[i].nombre %></nombre></td>
              <td><%= asignaturas[i].plan %></td>
              <td><%= asignaturas[i].cuatrimestre %></td>
              <td><%= asignaturas[i].curso %></td>
              <td><%= asignaturas[i].software %></td>
              <td><%= asignaturas[i].responsable %></td>
              <td><%= asignaturas[i].alumnos %></td>
              <td>
                <a
                  class="<%= asignaturas[i].status ? 'btn btn-success' : 'btn btn-dark'%>"
                  href="/asignaturas/turn/<%= asignaturas[i]._id %>">Done</a>
                <a href="/asignaturas/delete/<%= asignaturas[i]._id %>"
                  class="btn btn-danger">
                  Delete
                </a>
                <a href="/asignaturas/edit/<%= asignaturas[i]._id %>" class="btn btn-info">
                  Edit
                </a>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

    </div>
  </div>

</div>

<% include partials/_footer %>
