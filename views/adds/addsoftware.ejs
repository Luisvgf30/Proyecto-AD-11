<% include ../partials/_header %>
<div class="container centrado_total">
  <div class="row mar_carta">
    <!--FORM-->
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <form
            action="/miasignatura/addsoftware/<%= asignatura.id %>"
            method="post"
          >
            <div class="form-group">
              <label class="">Software</label>
              <input
                class="form-control"
                type="url"
                name="software"
                placeholder="Introduce URL"
              />
            </div>
            <div class="form-group">
              <button class="btn btn-primary" type="submit">add</button>
            </div>
          </form>
          <div class="form-group centrado">
            <form action='/miasignatura/addsoftware/upload/<%= asignatura.id %>' method="POST" enctype="multipart/form-data"> 
              <input type="file" name="file"> 
              <button class="btn btn-primary" type="submit">
                Agregar archivo
              </button>
            </form> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% include ../partials/_footer %>
