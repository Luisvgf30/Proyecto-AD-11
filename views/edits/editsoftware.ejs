      <!--FORM-->
      <div class="col-md-12">
        <div class="card">
          <div class="card-body">
            <form action="/miasignatura/editsoftware/<%= asignatura.id %>/<%= index %>" method="post">
              <div class="form-group">
                <label class="">Software</label>
                <input class="form-control" type="url" name="software" value="<%= asignatura.software[index]%>" />
              </div>
              <button class="btn btn-primary" type="submit">add</button>
            </form>
            <form action='/miasignatura/editsoftware/upload/<%= asignatura.id %>/<%= index %>' method="POST" enctype="multipart/form-data"> 
